<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F8FF">

    <!-- SCROLL CHÍNH -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:elevation="4dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back_arrow"
                    app:tint="#000000"
                    android:contentDescription="Quay lại"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Chi tiết xe của tôi"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <!-- CARD 1: THÔNG TIN XE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_bmwi5" />

                    <TextView
                        android:id="@+id/tvTenXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Đang tải..."
                        android:textColor="#000000"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBienSo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Đang tải..."
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvMauXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mẫu xe: Đang tải..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLoaiXe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Loại xe: Đang tải..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvMauSac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Màu sắc: Đang tải..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDungTich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Dung tích: Đang tải..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSoKhung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Số khung: Đang tải..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="Thông tin bảo hành: 10/09/2023 - 10/09/2026"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnThayPhuTung"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_button_border"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:text="Thay thế phụ tùng"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnDatDichVu1"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#000000"
                        android:text="Đặt dịch vụ"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2: BẢO DƯỠNG ĐỊNH KỲ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Thông tin bảo dưỡng định kỳ"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Các lần bảo dưỡng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLan1"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 1"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLan2"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 2"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLan3"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 3"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLan4"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 4"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLan5"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 5"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLan6"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/progress_gray"
                            android:gravity="center"
                            android:text="Lần 6"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Ghi chú màu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/dot_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đúng hạn"
                                android:textColor="#000000"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/dot_red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quá hạn"
                                android:textColor="#000000"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/dot_gray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lần kế tiếp"
                                android:textColor="#000000"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Ngày KTDK gần nhất (Lần 4): 16/02/2025"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Ngày KTDK tiếp theo (Lần 5): 14/12/2025"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnDatDichVu"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:backgroundTint="#000000"
                        android:text="Đặt dịch vụ"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3: NHẮC NHỞ PHỤ TÙNG -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutNhacNhoPhuTung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Nhắc nhở thay đổi phụ tùng"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Container để thêm các nhắc nhở động từ API -->
                    <LinearLayout
                        android:id="@+id/containerNhacNho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- Hiển thị khi không có nhắc nhở -->
                    <TextView
                        android:id="@+id/tvKhongCoNhacNho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Không có nhắc nhở nào"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4: LỊCH SỬ BẢO DƯỠNG -->
            <!-- CARD 4: LỊCH SỬ BẢO DƯỠNG -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- HEADER: title + button expand -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lịch sử bảo dưỡng"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btn_expand_history"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_expand"
                            app:tint="#D30000"
                            android:contentDescription="Mở thông tin lịch sử bảo dưỡng"/>
                    </LinearLayout>

                    <!-- NỘI DUNG (MẶC ĐỊNH GONE) -->
                    <LinearLayout
                        android:id="@+id/layoutHistoryDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="8dp">

                        <!-- ITEM 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="#F8F8F8"
                            android:layout_marginBottom="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_build"
                                    app:tint="#000000" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Đại lý Trường Phát 1"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ngày bảo dưỡng: 12/08/2024"
                                        android:textColor="#6B7280"
                                        android:textSize="14sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ITEM 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="#F8F8F8"
                            android:layout_marginBottom="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_build"
                                    app:tint="#000000" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Đại lý Trường Phát 2"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ngày bảo dưỡng: 10/03/2024"
                                        android:textColor="#6B7280"
                                        android:textSize="14sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- NÚT XEM CHI TIẾT CUỐI DANH SÁCH ITEM -->
                        <Button
                            android:id="@+id/btnViewHistoryDetail"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Xem chi tiết"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#000000"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Spacer để scroll tới cuối không bị che -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp" />
        </LinearLayout>
    </ScrollView>
    <!-- CHATBOX FLOATING BUTTON NỔI -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_chat_box"
        app:backgroundTint="#FFFFFF"
        app:tint="#C50E0E"
        app:elevation="8dp"
        android:contentDescription="Mở chat hỗ trợ"/>
</FrameLayout>
