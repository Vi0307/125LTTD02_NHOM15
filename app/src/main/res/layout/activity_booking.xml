<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- TOP BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack_agency_detail"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_arrow_back_black"
            android:tint="#000000"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Đặt lịch hẹn"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỷ"
            android:textColor="#A6A6A6"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn thời gian"
                android:textColor="#E53935"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="#E53935" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn dịch vụ"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="#EEEEEE" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem lại"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="#EEEEEE" />
        </LinearLayout>

    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="90dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtSelectTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chọn thời gian làm dịch vụ"
                android:textColor="#000000"
                android:paddingBottom="20dp"
                android:textSize="16sp"/>

            <!-- CALENDAR CARD -->
            <LinearLayout
                android:id="@+id/calendarCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_booking_card"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- MONTH BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/arrow_back_icon" />

                    <TextView
                        android:id="@+id/txtMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tháng 10 2025"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>

                <GridLayout
                    android:id="@+id/calendarGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="7"
                    android:rowCount="7"
                    android:useDefaultMargins="true"/>
            </LinearLayout>

            <!-- TIME GRID -->
            <GridLayout
                android:id="@+id/timeGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingTop="18dp"
                android:useDefaultMargins="true"/>

            <!-- BUTTON NEXT -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_button_black"
                android:text="Tiếp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>

    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <!-- ====== TRANG CHỦ ====== -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Trang chủ"
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ====== XE CỦA TÔI (ĐANG CHỌN) ====== -->
        <LinearLayout
            android:id="@+id/navCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_car"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Xe của tôi"
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ====== VOUCHER ====== -->
        <LinearLayout
            android:id="@+id/navVoucher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_voucher"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Voucher"
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ====== PHỤ TÙNG ====== -->
        <LinearLayout
            android:id="@+id/navParts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_parts"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Phụ tùng"
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ====== ĐẠI LÝ ====== -->
        <LinearLayout
            android:id="@+id/navAgency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_dealer"
                android:tint="#000000"
                tools:ignore="UseAppTint"
                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Đại lý"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
