<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. Ảnh nền chính -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_play" />   <!-- ảnh nền bạn đã có -->

    <!-- 3. Chữ chúc mừng vàng ở trên cùng (font Irish Grover) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="120dp"
        android:text="CHÚC MỪNG BẠN ĐÃ NHẬN ĐƯỢC\nVOUCHER MIỄN PHÍ VẬN CHUYỂN"
        android:textColor="#D4AF37"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="8dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="12" />

    <!-- 4. Ảnh huy hiệu FREE SHIPPING (có nền trong suốt) -->
    <ImageView
        android:id="@+id/imgFreeShipping"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_play_freeship"
        android:elevation="20dp" />

</FrameLayout>