<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg">

    <!-- ===== TOP BAR ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back_black"
            android:tint="#000000"
            tools:ignore="UseAppTint,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- ===== SCROLL CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ĐỊA CHỈ -->
            <TextView
                android:text="Địa chỉ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:backgroundTint="#FFFFFF"
                android:elevation="1dp"
                android:background="@drawable/btn_order_border">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location22"
                    android:tint="#000000"
                    tools:ignore="UseAppTint" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtAddressType"
                        android:text="Nhà riêng"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtAddressDetail"
                        android:text="Đang tải..."
                        android:textColor="#4C4C4C"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_pen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_pen"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- SẢN PHẨM -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="Sản phẩm"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- RecyclerView để hiển thị danh sách sản phẩm từ giỏ hàng -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderProducts"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- PHƯƠNG THỨC VẬN CHUYỂN -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="Phương thức vận chuyển"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="20dp"
                 android:layout_width="200dp"/>

            <LinearLayout
                android:id="@+id/ic_shipping_method"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_car"
                    android:tint="#000000"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/txtShippingMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Chọn phương thức vận chuyển"
                    android:textColor="#5A5A5A"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <!-- ÁP DỤNG KHUYẾN MÃI -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="Áp dụng khuyến mãi"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="20dp"
                android:layout_width="200dp"/>

            <LinearLayout
                android:id="@+id/ic_payment_method"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_voucher"
                    android:tint="#000000"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/txtVoucherCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chọn mã khuyến mãi"
                    android:textColor="#5A5A5A"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <!-- TÍNH TIỀN -->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Giá"
                        android:textSize="15sp"
                        android:textColor="#555555"
                        android:layout_height="20dp"
                        android:layout_width="100dp"/>

                    <TextView
                        android:id="@+id/txtPrice"
                        android:text="0 VND"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Vận chuyển"
                        android:textSize="15sp"
                        android:textColor="#555555"
                        android:layout_height="20dp"
                        android:layout_width="100dp"/>

                    <TextView
                        android:id="@+id/txtShippingFee"
                        android:text="-"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Khuyến mãi"
                        android:textSize="15sp"
                        android:textColor="#555555"
                        android:layout_height="20dp"
                        android:layout_width="100dp"/>

                    <TextView
                        android:id="@+id/txtDiscount"
                        android:text="-"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Tổng"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:text="0 VND"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ===== BUTTON THANH TOÁN ===== -->
    <Button
        android:id="@+id/btn_billing_address"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="#29B6F6"
        android:text="Tiếp tục thanh toán  →"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

</LinearLayout>
