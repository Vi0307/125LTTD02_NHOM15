<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_back_black"
            android:contentDescription="back"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Đại lý"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- placeholder to keep title centered -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Tên đại lý -->
    <TextView
        android:id="@+id/txtAgencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATRACO 1"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000" />

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:padding="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="290dp">

            <!-- Button Đặt dịch vụ -->
            <Button
                android:id="@+id/btnDatDichVu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/black"
                android:text="Đặt dịch vụ"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_margin="20dp"
                />

            <!-- Địa điểm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location22" />

                <TextView
                    android:id="@+id/txtTitleDiaDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa điểm"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDiaDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-20 Hoàng Hoa Thám, Phường Thanh Khê, TP Đà Nẵng"
                android:layout_marginStart="30dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#33000000" />

            <!-- Giờ làm việc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/txtTitleGioLamViec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giờ làm việc"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:30 - 18:00"
                android:layout_marginStart="30dp"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="#33000000" />

            <!-- Số điện thoại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/txtTitleSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02363750828, 375235"
                android:layout_marginStart="30dp"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        android:background="#FFFFFF"
        app:itemActiveIndicatorStyle="@style/NoActiveIndicator"
        app:itemIconTint="@drawable/bottom_nav_icon_selector"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextColor="@drawable/bottom_nav_text_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_chat"
        app:tint="@android:color/holo_red_light"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>
