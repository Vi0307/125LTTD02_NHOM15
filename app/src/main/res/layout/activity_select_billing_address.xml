<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- ===== TOP BAR ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_arrow_back_black"
            app:tint="#000000" />

        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- ===== SCROLL CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView danh sách địa chỉ -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvAddresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Thông báo khi không có địa chỉ -->
            <TextView
                android:id="@+id/txtNoAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có địa chỉ nào. Hãy thêm địa chỉ mới!"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn_themDiaChi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:text="Thêm địa chỉ" />

        </LinearLayout>
    </ScrollView>

    <!-- ===== BUTTON THANH TOÁN ===== -->
    <Button
        android:id="@+id/btn_apply_address"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        android:text="Áp dụng"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
