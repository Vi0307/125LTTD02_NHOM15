<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/arrow_back_icon"
            tools:ignore="UseAppTint,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Lịch sử bảo dưỡng"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Danh sách lịch sử bảo dưỡng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="8dp">

        <!-- ====== TRANG CHỦ ====== -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Trang chủ"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:layout_height="20dp"
                android:layout_width="60dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- ====== XE CỦA TÔI (ĐANG CHỌN) ====== -->
        <LinearLayout
            android:id="@+id/navCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_car" />

            <TextView
                android:layout_marginTop="4dp"
                android:text="Xe của tôi"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_height="20dp"
                android:layout_width="60dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- ====== VOUCHER ====== -->
        <LinearLayout
            android:id="@+id/navVoucher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_voucher"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:text="Voucher"
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ====== PHỤ TÙNG ====== -->
        <LinearLayout
            android:id="@+id/navParts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_parts"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Phụ tùng"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:layout_height="20dp"
                android:layout_width="50dp"
                android:textAlignment="center"     />
        </LinearLayout>

        <!-- ====== ĐẠI LÝ ====== -->
        <LinearLayout
            android:id="@+id/navAgency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_dealer"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_marginTop="4dp"
                android:text="Đại lý"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:layout_height="20dp"
                android:layout_width="40dp"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
