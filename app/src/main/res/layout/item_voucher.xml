<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_voucher_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/btn_gray_rounded"
    android:backgroundTint="#F5F5F5"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_ghim"
        android:tint="#000000"
        tools:ignore="UseAppTint" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtVoucherType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loáº¡i voucher"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txtVoucherExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSD: 30/11/2025"
            android:textColor="#4C4C4C"
            android:textSize="13sp"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/radioButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_radio_button_unchecked"
        android:tint="#000000"
        tools:ignore="UseAppTint" />

</LinearLayout>
