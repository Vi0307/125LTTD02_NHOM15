<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ảnh nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_play" />
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back_black"
        app:tint="#000000" />
    <!-- Hộp hướng dẫn cách chơi -->
    <!-- Hộp hướng dẫn cách chơi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#8CE8E8E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="HƯỚNG DẪN CÁCH CHƠI"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="- Mỗi tháng người chơi nhận được 2 lượt chơi"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="- Trò chơi như sau :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="+ 1 lượt chơi sẽ bao gồm 5 câu hỏi tương đương 100đ"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="+ Mỗi câu 20đ"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="+ Khi người chơi trả lời đúng 5 câu thì sẽ nhận được voucher miễn phí vận chuyển"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Nút SẴN SÀNG - căn giữa ngang + cách đáy 100dp -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReady"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:text="SẴN SÀNG"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"
        app:cornerRadius="34dp"
        app:backgroundTint="#D9D9D9"
        android:elevation="12dp"
        app:iconTint="#D4AF37"
        app:iconGravity="textStart"
        app:iconPadding="16dp" />

    <Button
        android:id="@+id/btnHelp2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#D9D9D9"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:text="\?"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="0dp" />

</FrameLayout>