<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Scroll content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back_arrow"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phụ tùng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

                <ImageView
                    android:id="@+id/btnCartHeader"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    android:contentDescription="Giỏ hàng" />
            </LinearLayout>

            <!-- ===== ĐƯỜNG KẺ NGANG DƯỚI HEADER ===== -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                android:layout_marginTop="8dp"/>

            <!-- Category Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐỘNG CƠ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <!-- ===== ĐƯỜNG KẺ NGANG DƯỚI TIÊU ĐỀ ===== -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="12dp"/>

            <!-- PRODUCT GRID -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- ITEM 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/dongcobomnuocdft" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Động cơ bơm nước DFT"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.000.000 VND"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#29B6F6"
                        android:text="THÊM GIỎ HÀNG"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- ITEM 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/motoquatketnuoc"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tơ quạt két nước"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.000.000 VND"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#29B6F6"
                        android:text="THÊM GIỎ HÀNG"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- ITEM 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/dongcobnhai"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Động cơ bơm nước AW4128"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.500.000 VND"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#29B6F6"
                        android:text="THÊM GIỎ HÀNG"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- ITEM 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/dongcobnba"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Động cơ bơm nước AW4108"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.000.000 VND"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#29B6F6"
                        android:text="THÊM GIỎ HÀNG"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>



    <!-- Bottom Navigation - Fixed -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="8dp">

        <!-- ====== TRANG CHỦ ====== -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Trang chủ"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- ====== XE CỦA TÔI ====== -->
        <LinearLayout
            android:id="@+id/navCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_car"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Xe của tôi"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- ====== VOUCHER ====== -->
        <LinearLayout
            android:id="@+id/navVoucher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_voucher"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Voucher"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- ====== PHỤ TÙNG (ĐANG CHỌN) ====== -->
        <LinearLayout
            android:id="@+id/navParts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_parts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Phụ tùng"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- ====== ĐẠI LÝ ====== -->
        <LinearLayout
            android:id="@+id/navAgency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_dealer"
                android:tint="#A0A0A0"
                tools:ignore="UseAppTint"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đại lý"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>