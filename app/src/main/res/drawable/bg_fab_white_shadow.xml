<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BÓNG ĐỔ MẠNH (offset lớn + màu đậm) -->
    <item
        android:left="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" /> <!-- Bóng đậm hơn -->
            <size android:width="80dp" android:height="80dp" /> <!-- Lớn hơn nút để bóng lan rộng -->
        </shape>
    </item>

    <!-- NỀN TRẮNG + VIỀN TRẮNG -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="3dp"
                android:color="#FFFFFF" />
            <size android:width="70dp" android:height="70dp" />
        </shape>
    </item>

</layer-list>